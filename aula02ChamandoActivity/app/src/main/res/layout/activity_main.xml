<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.paulortvalle.aula02chamandoactivity.MainActivity">

    <TextView
        android:text="@string/strMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/tvMenuDescricao"
        android:textSize="30sp"
        android:gravity="center" />

    <Button
        android:text="@string/strTela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/btMenuTela2"
        android:layout_below="@+id/btMenuTela1"
        android:layout_alignLeft="@+id/btMenuTela1"
        android:layout_alignStart="@+id/btMenuTela1" />

    <Button
        android:text="@string/strTela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/btMenuTela1"
        android:layout_below="@+id/tvMenuDescricao"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
